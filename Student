import java.util.*;

class Student {
    String studentID;
    String name;
    double[] scores;
    double GPA;
    String grade;

    public Student(String studentID, String name, double[] scores) {
        this.studentID = studentID;
        this.name = name;
        this.scores = scores;
        this.GPA = calculateGPA();
        this.grade = classifyGrade();
    }

    private double calculateGPA() {
        double sum = 0;
        for (double score : scores) {
            sum += score;
        }
        return Math.round((sum / scores.length) * 100.0) / 100.0;
    }

    private String classifyGrade() {
        if (GPA >= 8.0) return "Gi·ªèi";
        else if (GPA >= 6.5) return "Kh√°";
        else if (GPA >= 5.0) return "Trung b√¨nh";
        else return "Y·∫øu";
    }

    public void display() {
        System.out.println("MSSV: " + studentID + ", T√™n: " + name + ", GPA: " + GPA + ", H·ªçc l·ª±c: " + grade);
    }
}

public class StudentManager {
    static List<Student> studentList = new ArrayList<>();
    static Scanner sc = new Scanner(System.in);

    public static void main(String[] args) {
        int choice;
        do {
            System.out.println("\n----- MENU -----");
            System.out.println("1. Th√™m sinh vi√™n");
            System.out.println("2. Hi·ªÉn th·ªã danh s√°ch");
            System.out.println("3. T√¨m sinh vi√™n theo MSSV");
            System.out.println("4. Tho√°t");
            System.out.print("Ch·ªçn: ");
            choice = sc.nextInt();
            sc.nextLine();

            switch (choice) {
                case 1 -> addStudent();
                case 2 -> displayAll();
                case 3 -> searchStudent();
                case 4 -> System.out.println("Tho√°t ch∆∞∆°ng tr√¨nh.");
                default -> System.out.println("Ch·ªçn kh√¥ng h·ª£p l·ªá.");
            }
        } while (choice != 4);
    }

    public static void addStudent() {
        System.out.print("Nh·∫≠p MSSV: ");
        String id = sc.nextLine();

        System.out.print("Nh·∫≠p t√™n: ");
        String name = sc.nextLine();

        System.out.print("Nh·∫≠p s·ªë m√¥n h·ªçc: ");
        int subjectCount = sc.nextInt();
        double[] scores = new double[subjectCount];

        for (int i = 0; i < subjectCount; i++) {
            System.out.print("ƒêi·ªÉm m√¥n " + (i + 1) + ": ");
            scores[i] = sc.nextDouble();
        }

        Student student = new Student(id, name, scores);
        studentList.add(student);
        System.out.println("‚úÖ Th√™m sinh vi√™n th√†nh c√¥ng.");
    }

    public static void displayAll() {
        if (studentList.isEmpty()) {
            System.out.println("üì≠ Danh s√°ch tr·ªëng.");
        } else {
            System.out.println("\nüìö DANH S√ÅCH SINH VI√äN:");
            for (Student s : studentList) {
                s.display();
            }
        }
    }

    public static void searchStudent() {
        System.out.print("Nh·∫≠p MSSV c·∫ßn t√¨m: ");
        String id = sc.nextLine();

        boolean found = false;
        for (Student s : studentList) {
            if (s.studentID.equalsIgnoreCase(id)) {
                System.out.println("üîç K·∫øt qu·∫£ t√¨m ki·∫øm:");
                s.display();
                found = true;
                break;
            }
        }

        if (!found) {
            System.out.println("‚ùå Kh√¥ng t√¨m th·∫•y sinh vi√™n c√≥ MSSV: " + id);
        }
    }
}
